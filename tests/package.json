{
  "name": "test-automation",
  "version": "1.0.0",
  "description": "BDD test automation with Cucumber and Playwright",
  "scripts": {
    "test": "cucumber-js stories/**/features --require-module @babel/register --require 'stories/**/step_definitions/**/*.steps.js'",
    "test:watch": "nodemon --exec npm test",
    "test:story": "cucumber-js stories/$(ls -d PDLC-* | head -1)/features",
    "test:report": "cucumber-js stories/**/features --format html:reports/cucumber-report.html",
    "test:parallel": "cucumber-js stories/**/features --parallel 2"
  },
  "devDependencies": {
    "@babel/register": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@babel/preset-react": "^7.22.0",
    "@cucumber/cucumber": "^10.0.0",
    "@playwright/test": "^1.40.0",
    "nodemon": "^3.0.0"
  },
  "keywords": ["bdd", "cucumber", "playwright", "testing", "automation"],
  "author": "PDLC QA Engineer",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
